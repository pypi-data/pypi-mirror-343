[tool.poetry]
name = "{{ project_name }}"
version = "0.1.0"
description = "A FastAPI project"
authors = ["Your Name <your.email@example.com>"]
readme = "README.md"

[tool.poetry.dependencies]
python = "^3.10"
fastapi = "^0.115.12"
uvicorn = "^0.23.0"
pydantic = "^2.1.0"
sqlalchemy = "^2.0.0"
python-dotenv = "^1.0.0"
alembic = "^1.15.2"
pydantic-settings = "^2.8.1"

[tool.poetry.group.dev.dependencies]
pytest = "^7.3.1"
httpx = "^0.24.0"
flake8 = {version = "^6.1.0", python = ">=3.10"}
black = "^23.7.0"
mypy = "^1.4.0"
isort = "^5.12.0"
coverage = "^7.2.0"

[build-system]
requires = ["poetry-core"]
build-backend = "poetry.core.masonry.api"

[tool.black]
line-length = 88
target-version = ['py310']

[tool.isort]
profile = "black"
line_length = 88

[tool.mypy]
ignore_missing_imports = true
check_untyped_defs = true
python_version = "3.10"