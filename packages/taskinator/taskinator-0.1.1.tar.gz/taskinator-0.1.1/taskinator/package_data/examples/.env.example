# Taskinator Configuration

# Debug mode (optional)
DEBUG=false

# AI Model Configuration
MAX_TOKENS=4000
TEMPERATURE=0.7
DEFAULT_SUBTASKS=5

# Option 1: Direct Anthropic API Access
ANTHROPIC_API_KEY=your_anthropic_api_key_here
CLAUDE_MODEL=claude-3-opus-20240229

# Option 2: AWS Bedrock Access
USE_BEDROCK=true
AWS_ACCESS_KEY_ID=your_aws_access_key_here
AWS_SECRET_ACCESS_KEY=your_aws_secret_key_here
#AWS_SESSION_TOKEN=your_session_token_here  # Optional, for temporary credentials
AWS_REGION=us-east-1  # Or your preferred region
CLAUDE_MODEL=anthropic.claude-3-5-sonnet-20241022-v2:0  # Bedrock model ID

# Note: You can use either Option 1 or Option 2
# If both are configured, the USE_BEDROCK flag determines which to use

# Optional: Perplexity AI Integration
PERPLEXITY_API_KEY=your_perplexity_api_key_here
PERPLEXITY_MODEL=sonar-pro

# AWS Credentials can also be configured via:
# 1. ~/.aws/credentials file
# 2. AWS CLI configuration
# 3. EC2 instance role
# 4. Environment variables as shown above