<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="8dp">

    <TextView
        android:id="@+id/tvPrinterId"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="ID"
        app:layout_constraintEnd_toStartOf="@id/tvPrinterModel"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/tvPrinterModel"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Model"
        app:layout_constraintEnd_toStartOf="@id/tvPrinterStatus"
        app:layout_constraintStart_toEndOf="@id/tvPrinterId"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/tvPrinterStatus"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Status"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@id/tvPrinterModel"
        app:layout_constraintTop_toTopOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>